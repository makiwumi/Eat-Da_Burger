<div class="container">
	<!--Header-->
    <div class="row header text-center">
		<img class="img-responsive" src="./assets/img/burger3.png">
        <h1>Eat-Da-Burger!</h1>
        <p>All the burgers your heart desires!</p>
        <br>
		<p>Enter your favorite burger and click Submit. Once you're ready to devour your burger, press the burger icon button. If you would like to remove you burger from the devoured list, press the trash icon button</p>
                    
        <panel>
            <form class="create-form">
                <div class="form-group">
					<label for="newburger">Create a burger:</label>
					<br>
                    <input type="text" id="newburger" name="burger" placeholder="Enter your favorite burger...">
                    
                    <button type="submit" class="btn btn-success" id="addburger">Submit</button>
                </div>
            </form>
        </panel>
    </div>

    <div class="row">
        <!-- Undevoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="lefthead"><strong>New Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                <span><strong> {{this.burger_name}} </strong></span>
                                <button type="button" class="eatburger btn btn-success" id ="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><i class="fas fa-hamburger"></i></button>
                                <hr>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <!-- Devoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="righthead"><strong>Devoured Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                <span><strong> {{this.burger_name}} </strong></span>
                                <button type="button" class="trashburger btn btn-danger" id ="trashbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                                <hr>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>